<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_input_stream" tools:context=".InputStream">

    <TextView android:text="Please input text's name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vtxtname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtname"
        android:layout_below="@+id/vtxtname"
         />

    <TextView
        android:text="Please input something into text."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vtxtcontent"
        android:layout_below="@+id/txtname"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtcontent"
        android:layout_below="@+id/vtxtcontent"
        android:minLines="2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write"
        android:id="@+id/bwrite"
        android:layout_below="@+id/txtcontent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clean"
        android:id="@+id/bclean"
        android:layout_alignTop="@+id/bwrite"
        android:layout_toRightOf="@+id/bwrite"
        android:layout_toEndOf="@+id/bwrite" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read"
        android:id="@+id/bread"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="write in SD card"
        android:id="@+id/bwritesd"
        android:layout_below="@+id/bread"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read in SD card"
        android:id="@+id/breadsd"
        android:layout_alignTop="@+id/bwritesd"
        android:layout_toRightOf="@+id/bwritesd"
        android:layout_toEndOf="@+id/bwritesd" />
</RelativeLayout>
